resize_canvas = Redimensionar lienzo...

[menu_transform_status_tips]
flip_hor = Voltear horizontalmente la imagen o una parte de ella
flip_ver = Voltear verticalmente la imagen o una parte de ella
rotate_cw = Rotar 90º en sentido horario la imagen o una parte de ella
rotate_ccw = Rotar 90º en sentido antihorario la imagen o una parte de ella
rotate_180 = Rotar 180º la imagen o una parte de ella
resize = Modificar el tamaño de la imagen o de una parte de ella
resize_canvas = Modificar el tamaño del lienzo

[menu_help_labels]
